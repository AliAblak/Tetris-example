    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Tetris'i Chrome'da Başlat",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Tetris'i Firefox'ta Başlat",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Live Server ile Başlat",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "live-server",
            "runtimeArgs": ["--port=5500"],
            "cwd": "${workspaceFolder}",
        }
    ]
}